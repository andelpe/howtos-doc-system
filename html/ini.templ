<script>

 function myalert(){  alert("ALERT");  }   

 var kwordFilter = "<input type=\"text\" class=\"filter\"   name=\"kwordFilter\" size=22 value=" 
 var NkwordFilter = "<input type=\"text\" class=\"Nfilter\" name=\"NkwordFilter\" size=17 value=" 
 var bodyFilter  = "<input type=\"text\" class=\"filter\" name=\"bodyFilter\" size=19 value=\"\" >" 

 function addKwordFilter() {
   $("#kwordFilter").html($("#kwordFilter").html() + "<br/>" + kwordFilter + "\"\" >");
 }
 function addNkwordFilter() {
   $("#NkwordFilter").html($("#NkwordFilter").html() + "<br/>" + NkwordFilter + "\"\" >");
 }
 function addAndSubmit(func, value) {
   func(value); 
   $("#filterForm").submit();
 }
 function valAndSubmit(value) {
   $("#qfClicked").val(value); 
   $("#filterForm").submit();
 }
 function addBodyFilter() {
   $("#bodyFilter").html($("#bodyFilter").html() + "<br/>" + bodyFilter);
 }
 function addKword(value){
   $("#newKwords").val(value + ',' + $("#newKwords").val());
 }

 function validateForm() {
    if ($("#newHowto").val() == "") {
        alert("Add HowTo:\n\n  HowTo name must be filled out");
        return false;
    }
    if ($("#newKwords").val() == "") {
        alert("Add HowTo:\n\n  Please introduce at least one keyword");
        return false;
    }
 }

</script>


